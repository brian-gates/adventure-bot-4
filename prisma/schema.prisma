generator client {
    provider = "prisma-client"
    output   = "../src/generated/prisma"
    runtime  = "deno"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Player {
    id         String  @id
    name       String
    health     Int
    maxHealth  Int     @default(10)
    lastTarget String? // ID of the last targeted player

    @@index([lastTarget])
}
