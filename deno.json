{
  "importMap": "import_map.json",
  "nodeModulesDir": "auto",
  "lint": {},
  "fmt": {
    "exclude": ["pnpm-lock.yaml"]
  },
  "tasks": {
    "test": "deno test --allow-env --allow-read --allow-ffi",
    "dev": "deno run -A src/bot/index.ts",
    "generate": "pnpm prisma generate",
    "migrate": "pnpm prisma migrate dev",
    "clear-map": "deno run -A src/game/map/clear-map.ts $GUILD_ID",
    "maps": "deno run -A src/game/map/generation/dev-generate-map.ts",
    "generate-map-icons": "deno run --allow-read --allow-write scripts/generate-map-icon-data-uris.ts",
    "browse-maps": "deno run -A src/game/map/generation/browse-maps.ts"
  }
}
